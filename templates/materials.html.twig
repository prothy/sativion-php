            <span>
                <img src='{{ asset('assets/materials/magok.png') }}' alt="{{ 'materials.products.1.title'|trans }}">
                <h4>{{ 'materials.products.0.title'|trans }}</h4>
            </span>
            <span>
                <img src='{{ asset('assets/materials/hantolt.png') }}' alt="{{ 'materials.products.2.title'|trans }}">
