{% extends 'base.html.twig' %}

{% block head %}
    <head>
        <link rel="stylesheet" href="{{ asset('css/materials.css') }}">
        <title>Sativion - {{ 'materials.title'|trans }}</title>
    </head>
{% endblock %}

{% block content %}
