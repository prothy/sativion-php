            </span>
            <span>
                <img src='{{ asset('assets/materials/protein.png') }}' alt="{{ 'materials.products.3.title'|trans }}">
                <h4>{{ 'materials.products.2.title'|trans }}</h4>
            </span>
            <span>
                <img src='{{ asset('assets/materials/liszt.png') }}' alt="{{ 'materials.products.4.title'|trans }}">
                <h4>{{ 'materials.products.3.title'|trans }}</h4>
            </span>
            <span>
                <img src='{{ asset('assets/materials/olaj.png') }}' alt="{{ 'materials.products.5.title'|trans }}">
                <h4>{{ 'materials.products.4.title'|trans }}</h4>
            </span>
        </div>
    </article>
{% endblock %}